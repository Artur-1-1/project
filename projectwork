import telebot
# –í—Å—Ç–∞–≤ —Ç–æ–∫–µ–Ω, —è–∫–∏–π –Ω–∞–¥—ñ—Å–ª–∞–≤ BotFather
bot = telebot.TeleBot('7237082682:AAF2OxYfftKvVIbg_Nc7tCJCV62AVSA01FU')

symbol_dict = {
    '–ê': '!', '–ë': '@', '–í': '#', '–ì': '$', '“ê': '%', '–î': '^', '–ï': '&', '–Ñ': '*', '–ñ': '(',
    '–ó': ')', '–ò': '-', '–Ü': '_', '–á': '+', '–ô': '=', '–ö': '{', '–õ': '}', '–ú': '[', '–ù': ']',
    '–û': ':', '–ü': ';', '–†': '"', '–°': "'", '–¢': '<', '–£': '>', '–§': ',', '–•': '.', '–¶': '?',
    '–ß': '/', '–®': '|', '–©': '`', '–¨': '~', '–Æ': '‚Ññ', '–Ø': '‚Ç¨', ' ': ' '  # –ü—Ä–æ–±—ñ–ª –∑–∞–ª–∏—à–∏–º–æ –±–µ–∑ –∑–º—ñ–Ω
}

    
# –ö–æ–º–∞–Ω–¥–∞ /start: –≤—ñ–¥–ø—Ä–∞–≤–ª—è—î –ø—Ä–∏–≤—ñ—Ç–∞–Ω–Ω—è, –∫–æ–ª–∏ –∫–æ—Ä–∏—Å—Ç—É–≤–∞—á –ø–∏—à–µ /start
@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.reply_to(message, "–ü—Ä–∏–≤—ñ—Ç! –Ø —Ç–≤—ñ–π –Ω–æ–≤–∏–π –±–æ—Ç üòä")

# –ö–æ–º–∞–Ω–¥–∞ /help: –≤—ñ–¥–ø—Ä–∞–≤–ª—è—î –ø–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è –∑ –ø—ñ–¥–∫–∞–∑–∫–∞–º–∏
@bot.message_handler(commands=['help'])
def send_help(message):
    bot.reply_to(message, "–Ø –º–æ–∂—É –¥–æ–ø–æ–º–æ–≥—Ç–∏ —Ç–æ–±—ñ –∑ –æ—Å–Ω–æ–≤–Ω–∏–º–∏ –∫–æ–º–∞–Ω–¥–∞–º–∏: /start, /help, /length <—Ç–µ–∫—Å—Ç>")

# –ö–æ–º–∞–Ω–¥–∞ /length: –≤–∏–∑–Ω–∞—á–∞—î –¥–æ–≤–∂–∏–Ω—É –≤–≤–µ–¥–µ–Ω–æ–≥–æ —Ç–µ–∫—Å—Ç—É
@bot.message_handler(commands=['encrypt'])
def get_length(message):
    # –û—Ç—Ä–∏–º–∞—î–º–æ —Ç–µ–∫—Å—Ç –ø—ñ—Å–ª—è –∫–æ–º–∞–Ω–¥–∏ /length
    d = 8
    text = message.text[d:]  # –í–∏–ª—É—á–∞—î–º–æ "/length " –∑ –∫–æ–º–∞–Ω–¥–∏
    encrypted_text = text
    for char in text:
        if char.upper() in symbol_dict:
            encrypted_text += symbol_dict[char.upper()]
        else:
            encrypted_text += char
    
    bot.reply_to(message, f"–û—Å—å —Ç–≤—ñ–π –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–π —Ç–µ–∫—Å—Ç: {encrypted_text}")

# –ó–∞–ø—É—Å–∫ –±–æ—Ç–∞
bot.polling()
