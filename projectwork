import telebot
import hashlib
# –í—Å—Ç–∞–≤ —Ç–æ–∫–µ–Ω, —è–∫–∏–π –Ω–∞–¥—ñ—Å–ª–∞–≤ BotFather
bot = telebot.TeleBot('7237082682:AAF2OxYfftKvVIbg_Nc7tCJCV62AVSA01FU')

key = {
    '–ê': '!', '–ë': '@', '–í': '#', '–ì': '$', '“ê': '%', '–î': '^', '–ï': '&', '–Ñ': '*', '–ñ': '(',
    '–ó': ')', '–ò': '-', '–Ü': '_', '–á': '+', '–ô': '=', '–ö': '{', '–õ': '}', '–ú': '[', '–ù': ']',
    '–û': ':', '–ü': ';', '–†': '"', '–°': "'", '–¢': '<', '–£': '>', '–§': ',', '–•': '.', '–¶': '?',
    '–ß': '/', '–®': '|', '–©': '`', '–¨': '~', '–Æ': '‚Ññ', '–Ø': '‚Ç¨', ' ': ' '  # –ü—Ä–æ–±—ñ–ª –∑–∞–ª–∏—à–∏–º–æ –±–µ–∑ –∑–º—ñ–Ω
}

    
# –ö–æ–º–∞–Ω–¥–∞ /start: –≤—ñ–¥–ø—Ä–∞–≤–ª—è—î –ø—Ä–∏–≤—ñ—Ç–∞–Ω–Ω—è, –∫–æ–ª–∏ –∫–æ—Ä–∏—Å—Ç—É–≤–∞—á –ø–∏—à–µ /start
@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.reply_to(message, "–ü—Ä–∏–≤—ñ—Ç! –Ø —Ç–≤—ñ–π –Ω–æ–≤–∏–π –±–æ—Ç üòä\n–ü–æ–¥–∏–≤–∏—Å—å –≤—Å—ñ –∫–æ–º–∞–Ω–¥–∏ –∑–∞ –¥–æ–ø–æ–º–æ–≥–æ—é /help")

# –ö–æ–º–∞–Ω–¥–∞ /help: –≤—ñ–¥–ø—Ä–∞–≤–ª—è—î –ø–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è –∑ –ø—ñ–¥–∫–∞–∑–∫–∞–º–∏
@bot.message_handler(commands=['help'])
def send_help(message):
    bot.reply_to(message, "–û—Å—å —Å–ø–∏—Å–æ–∫ –≤—Å—ñ—Ö –∫–æ–º–∞–Ω–¥:\n/enmasson;/demasson - —à–∏—Ñ—Ä—É–≤–∞–Ω–Ω—è/—Ä–æ–∑—à–∏—Ñ—Ä—É–≤–∞–Ω–Ω—è –º–∞—Å–æ–Ω—Å—å–∫–∏–º —à–∏—Ñ—Ä–æ–º\n/enceasar;/deceasar - —à–∏—Ñ—Ä—É–≤–∞–Ω–Ω—è/—Ä–æ–∑—à–∏—Ñ—Ä—É–≤–∞–Ω–Ω—è —à–∏—Ñ—Ä–æ–º —Ü–µ–∑–∞—Ä—è\nhash - —Ö–µ—à—É–≤–∞–Ω–Ω—è")


@bot.message_handler(commands=['demasson'])
def send_deshifr(message):
    text = message.text[10:]
    reverse_dict = {v: k for k, v in key.items()}
    decrypted_m = ""
    for char in text:
        if char in reverse_dict:
            decrypted_m += reverse_dict[char]
        else:
            decrypted_m += char
    bot.send_message(message.chat.id, f"–û—Å—å —Ç–≤—ñ–π –¥–µ—à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–π —Ç–µ–∫—Å—Ç: {decrypted_m}")


@bot.message_handler(commands=['enmasson'])
def send_deshifr(message):
    text = message.text[10:].upper()
    reverse_dict = key
    encrypted_m = ""
    for char in text:
        if char in reverse_dict:
            encrypted_m += reverse_dict[char]
        else:
            encrypted_m += char
    bot.send_message(message.chat.id, f"–û—Å—å —Ç–≤—ñ–π –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–π —Ç–µ–∫—Å—Ç: {encrypted_m}")

@bot.message_handler(commands=['hash'])
def send_hash(message):
    text = message.text[6:]
    h = hashlib.sha256(text.encode())
    h = h.hexdigest()
    bot.send_message(message.chat.id, f"–û—Å—å —Ç–≤—ñ–π –∑–∞—Ö–µ—à–æ–≤–∞–Ω–∏–π —Ç–µ–∫—Å—Ç: {h}")


@bot.message_handler(commands=['enceasar'])
def send_enceaser(message):
    shift = 3
    text = message.text[10:]
    encrypted_c = ""
    for char in text:
        if char.isalpha():
            shift_base = ord('A') if char.isupper() else ord('a')
            encrypted_c += chr((ord(char) - shift_base + shift) % 31 + shift_base)
        elif char.isdigit():
            shift_base = ord('0')
            encrypted_c += chr((ord(char)-shift_base + shift)%10+shift_base)
        else:
            encrypted_c += char
    bot.send_message(message.chat.id, f"–û—Å—å —Ç–≤—ñ–π –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–π —Ç–µ–∫—Å—Ç: {encrypted_c}")

@bot.message_handler(commands=['deceasar'])
def send_deceaser(message):
    shift = 3
    text = message.text[10:]
    decrypted_c = ""
    for char in text:
        if char.isalpha():
            shift_base = ord("A") if char.isupper() else ord('a')
            decrypted_c += chr((ord(char) - shift_base - shift) % 31 + shift_base)
        elif char.isdigit():
            shift_base = ord("0")
            decrypted_c += chr((ord(char)-shift_base - shift)%10+shift_base)
        else:
            decrypted_c += char
    bot.send_message(message.chat.id, f"–û—Å—å —Ç–≤—ñ–π –¥–µ—à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–π —Ç–µ–∫—Å—Ç: {decrypted_c}")

bot.polling()
