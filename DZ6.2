import sqlite3
conn = sqlite3.connect('my_database1.db')
cursor = conn.cursor()

# Створення таблиці (якщо її ще немає)
cursor.execute('''
CREATE TABLE IF NOT EXISTS library (

id INTEGER PRIMARY KEY AUTOINCREMENT,
title TEXT,
author TEXT,
year INTEGER
)
''')

